<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DustInTheWind.WpfTools.CustomControls">

    <Style TargetType="{x:Type local:SideBarNavigator}">
        <Setter Property="Foreground" Value="{DynamicResource SideBarNavigator_ForegroundBrush}" />
        <Setter Property="Background" Value="{DynamicResource SideBarNavigator_BackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource SideBarNavigator_BorderBrush}" />
        <Setter Property="TabStripPlacement" Value="Left" />
        <Setter Property="Padding" Value="5 5 5 10" />
        <Setter Property="Margin" Value="0" />

        <!--
        ================================================================================================
        Template
        ================================================================================================
        -->

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SideBarNavigator}">
                    <DockPanel>

                        <Border
                            DockPanel.Dock="Left"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}"
                            ClipToBounds="True"
                            BorderThickness="0 0 1 0"
                            Padding="{TemplateBinding Padding}">

                            <DockPanel>

                                <ItemsControl
                                    DockPanel.Dock="Bottom"
                                    ItemsSource="{TemplateBinding Buttons}" />

                                <TabPanel
                                    IsItemsHost="true"
                                    Background="Transparent" />

                            </DockPanel>
                        </Border>

                        <ContentPresenter ContentSource="SelectedContent" />

                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!--
        ================================================================================================
        Content Template
        ================================================================================================
        -->

        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border Padding="10">
                        <ContentPresenter Content="{Binding}"/>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>

        <!--
        ================================================================================================
        Item Container Style
        ================================================================================================
        -->

        <Setter Property="ItemContainerStyle">
            <Setter.Value>

                <Style TargetType="{x:Type TabItem}">

                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <ContentControl
                                    Content="{TemplateBinding Content}"
                                    FontSize="{DynamicResource DefaultFontSize}"
                                    IsTabStop="False" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">

                                <Border
                                    Name="PART_Panel"
                                    Margin="5"
                                    CornerRadius="2"
                                    Width="40"
                                    Height="40">

                                    <ContentPresenter
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header" />

                                </Border>

                                <ControlTemplate.Triggers>

                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="PART_Panel" Property="Background" Value="{DynamicResource SideBarNavigator_Item_Selected_BackgroundBrush}" />
                                        <Setter TargetName="PART_Panel" Property="BorderBrush" Value="{DynamicResource SideBarNavigator_Item_Selected_BorderBrush}" />
                                        <Setter TargetName="PART_Panel" Property="BorderThickness" Value="1" />
                                    </Trigger>

                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="PART_Panel" Property="Background" Value="Transparent" />
                                    </Trigger>

                                    <MultiTrigger>

                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="False" />
                                            <Condition Property="IsMouseOver" Value="True" />
                                        </MultiTrigger.Conditions>

                                        <MultiTrigger.Setters>
                                            <Setter TargetName="PART_Panel" Property="Background" Value="{DynamicResource SideBarNavigator_Item_MouseOver_BackgroundBrush}" />
                                        </MultiTrigger.Setters>

                                    </MultiTrigger>

                                </ControlTemplate.Triggers>

                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                </Style>

            </Setter.Value>
        </Setter>

    </Style>

    <SolidColorBrush x:Key="SideBarNavigator_ForegroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="SideBarNavigator_BorderBrush" Color="Gray"/>
    <SolidColorBrush x:Key="SideBarNavigator_BackgroundBrush" Color="LightGray"/>

    <SolidColorBrush x:Key="SideBarNavigator_Item_Selected_BackgroundBrush" Color="LightGray"/>
    <SolidColorBrush x:Key="SideBarNavigator_Item_Selected_BorderBrush" Color="LightGray"/>
    <SolidColorBrush x:Key="SideBarNavigator_Item_MouseOver_BackgroundBrush" Color="Gray"/>

    <SolidColorBrush x:Key="SideBarNavigator_Button_HoverBrush" Color="Gray"/>
    <SolidColorBrush x:Key="SideBarNavigator_Button_PressedBrush" Color="Gray"/>

</ResourceDictionary>
