<Window 
    x:Class="DustInTheWind.WpfToolkit.Demos.WindowDragDemo.MainWindow"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfToolkit="clr-namespace:DustInTheWind.WpfToolkit;assembly=DustInTheWind.WpfToolkit"
    
    mc:Ignorable="d"
    Title="Window Drag Behavior Demo"
    Height="450"
    Width="800"
    wpfToolkit:WindowDragBehavior.EnableDrag="True"
    ResizeMode="CanResizeWithGrip">

    <TextBlock
        VerticalAlignment="Center"
        HorizontalAlignment="Center"
        Text="Drag the window by clicking and dragging anywhere in the window."
        MaxWidth="250"
        TextWrapping="Wrap"
        Margin="20 0"
        TextAlignment="Center" />

</Window>
