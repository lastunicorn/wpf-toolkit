<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpfToolkit="clr-namespace:DustInTheWind.WpfToolkit">

    <SolidColorBrush x:Key="Dust_SideBar_ForegroundBrush" Color="Black" />
    <SolidColorBrush x:Key="Dust_SideBar_BackgroundBrush" Color="#e8e8e8" />
    <SolidColorBrush x:Key="Dust_SideBar_BorderBrush" Color="#c0c0c0" />

    <SolidColorBrush x:Key="Dust_SideBar_Item_MouseOver_BackgroundBrush" Color="#d0d0d0"/>
    <SolidColorBrush x:Key="Dust_SideBar_Item_Selected_BackgroundBrush" Color="#b0b0b0"/>

    <SolidColorBrush x:Key="Dust_SideBar_Button_MouseOver_BackgroundBrush" Color="#d0d0d0"/>
    <SolidColorBrush x:Key="Dust_SideBar_Button_Pressed_BackgroundBrush" Color="#b0b0b0"/>

    <Style TargetType="{x:Type wpfToolkit:SideBar}">
        <Setter Property="Foreground" Value="{StaticResource Dust_SideBar_ForegroundBrush}" />
        <Setter Property="Background" Value="{StaticResource Dust_SideBar_BackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Dust_SideBar_BorderBrush}" />
        <Setter Property="ItemSelectedBackground" Value="{StaticResource Dust_SideBar_Item_Selected_BackgroundBrush}" />
        <Setter Property="ItemMouseOverBackground" Value="{StaticResource Dust_SideBar_Item_MouseOver_BackgroundBrush}" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="IsTabStop" Value="False" />

        <!--
        ================================================================================================
        Template
        ================================================================================================
        -->

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type wpfToolkit:SideBar}">
                    <DockPanel>

                        <Border
                            DockPanel.Dock="Left"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}"
                            ClipToBounds="True"
                            BorderThickness="0 0 1 0"
                            Padding="{TemplateBinding Padding}">

                            <DockPanel>

                                <ItemsControl
                                    DockPanel.Dock="Bottom"
                                    ItemsSource="{TemplateBinding Buttons}"
                                    IsTabStop="False">

                                    <ItemsControl.Resources>
                                        <Style TargetType="{x:Type Button}">

                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                        <Border
                                                            x:Name="PART_Panel"
                                                            Margin="5"
                                                            CornerRadius="2"
                                                            Width="40"
                                                            Height="40"
                                                            Background="Transparent">

                                                            <ContentPresenter
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Center"
                                                                Content="{TemplateBinding Content}"
                                                                ContentTemplate="{TemplateBinding ContentTemplate}" />

                                                        </Border>

                                                        <ControlTemplate.Triggers>

                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="PART_Panel" Property="Background" Value="{StaticResource Dust_SideBar_Button_MouseOver_BackgroundBrush}" />
                                                            </Trigger>

                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter TargetName="PART_Panel" Property="Background" Value="{StaticResource Dust_SideBar_Button_Pressed_BackgroundBrush}" />
                                                            </Trigger>
                                                            
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ItemsControl.Resources>

                                </ItemsControl>

                                <ItemsPresenter />

                            </DockPanel>
                        </Border>

                        <ContentPresenter
                            Content="{TemplateBinding SelectedContent}"
                            ContentTemplate="{TemplateBinding SelectedContentTemplate}"  />

                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!--
        ================================================================================================
        Items Panel
        ================================================================================================
        -->

        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>

        <!--
        ================================================================================================
        Item Container Style
        ================================================================================================
        -->

        <Setter Property="ItemContainerStyle">
            <Setter.Value>

                <Style TargetType="{x:Type wpfToolkit:SideBarItem}">

                    <Setter Property="SelectedBackground" Value="{Binding ItemSelectedBackground, RelativeSource={RelativeSource AncestorType={x:Type wpfToolkit:SideBar}}}" />
                    <Setter Property="MouseOverBackground" Value="{Binding ItemMouseOverBackground, RelativeSource={RelativeSource AncestorType={x:Type wpfToolkit:SideBar}}}" />
                    <Setter Property="Focusable" Value="True" />
                    <Setter Property="IsTabStop" Value="True" />

                    <!--
                    Template for the checked button displayed in the side bar.
                    It applyes mouse over styles on it.
                    -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type wpfToolkit:SideBarItem}">

                                <Border
                                    Name="PART_Panel"
                                    Margin="5"
                                    CornerRadius="2"
                                    Width="40"
                                    Height="40"
                                    Background="Transparent">

                                    <ContentPresenter
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Content="{TemplateBinding Header}"
                                        ContentTemplate="{TemplateBinding HeaderTemplate}" />

                                </Border>

                                <ControlTemplate.Triggers>

                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="PART_Panel" Property="Background" Value="{Binding SelectedBackground, RelativeSource={RelativeSource TemplatedParent}}"/>
                                    </Trigger>

                                    <MultiTrigger>

                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="False" />
                                            <Condition Property="IsMouseOver" Value="True" />
                                        </MultiTrigger.Conditions>

                                        <MultiTrigger.Setters>
                                            <Setter TargetName="PART_Panel" Property="Background" Value="{Binding MouseOverBackground, RelativeSource={RelativeSource TemplatedParent}}" />
                                        </MultiTrigger.Setters>

                                    </MultiTrigger>

                                </ControlTemplate.Triggers>

                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <!---
                    Template for the content of the check button.
                    -->
                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <ContentControl
                                    Content="{Binding}"
                                    FontSize="{DynamicResource DefaultFontSize}"
                                    IsTabStop="False"/>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>

                </Style>

            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>
