<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpfToolkit="clr-namespace:DustInTheWind.WpfToolkit">

    <SolidColorBrush x:Key="Dust_SideBar_ForegroundBrush" Color="Black"/>
    <SolidColorBrush x:Key="Dust_SideBar_BorderBrush" Color="Gray"/>
    <SolidColorBrush x:Key="Dust_SideBar_BackgroundBrush" Color="Gray"/>

    <SolidColorBrush x:Key="Dust_SideBar_Item_Selected_BackgroundBrush" Color="LightGray"/>
    <SolidColorBrush x:Key="Dust_SideBar_Item_Selected_BorderBrush" Color="LightGray"/>
    <SolidColorBrush x:Key="Dust_SideBar_Item_MouseOver_BackgroundBrush" Color="LightGray"/>

    <SolidColorBrush x:Key="Dust_SideBar_Button_HoverBrush" Color="Gray"/>
    <SolidColorBrush x:Key="Dust_SideBar_Button_PressedBrush" Color="Gray"/>

    <Style TargetType="{x:Type wpfToolkit:SideBar}">
        <Setter Property="Foreground" Value="{StaticResource Dust_SideBar_ForegroundBrush}" />
        <Setter Property="Background" Value="{StaticResource Dust_SideBar_BackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Dust_SideBar_BorderBrush}" />
        <Setter Property="Padding" Value="5 5 5 10" />
        <Setter Property="Margin" Value="0" />

        <!--
        ================================================================================================
        Template
        ================================================================================================
        -->

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type wpfToolkit:SideBar}">
                    <DockPanel>

                        <Border
                            DockPanel.Dock="Left"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}"
                            ClipToBounds="True"
                            BorderThickness="0 0 1 0"
                            Padding="{TemplateBinding Padding}">

                            <DockPanel>

                                <ItemsControl
                                    DockPanel.Dock="Bottom"
                                    ItemsSource="{TemplateBinding Buttons}" />

                                <ItemsPresenter />

                            </DockPanel>
                        </Border>

                        <ContentPresenter Content="{TemplateBinding SelectedContent}" />

                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!--
        ================================================================================================
        Items Panel
        ================================================================================================
        -->

        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Background="Transparent" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>

        <!--
        ================================================================================================
        Item Container Style
        ================================================================================================
        -->

        <Setter Property="ItemContainerStyle">
            <Setter.Value>

                <Style TargetType="{x:Type wpfToolkit:SideBarItem}">

                    <Setter Property="SelectedBackground" Value="{StaticResource SideBar_Item_Selected_BackgroundBrush}" />
                    <Setter Property="MouseOverBackground" Value="{StaticResource SideBar_Item_MouseOver_BackgroundBrush}" />

                    <Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <ContentControl
                                    Content="{Binding}"
                                    FontSize="{DynamicResource DefaultFontSize}"
                                    IsTabStop="False" />
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type wpfToolkit:SideBarItem}">

                                <Border
                                    Name="PART_Panel"
                                    Margin="5"
                                    CornerRadius="2"
                                    Width="40"
                                    Height="40"
                                    Background="Transparent">

                                    <ContentPresenter
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        Content="{TemplateBinding Header}"
                                        ContentTemplate="{TemplateBinding HeaderTemplate}" />

                                </Border>

                                <ControlTemplate.Triggers>

                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="PART_Panel" Property="Background" Value="{Binding SelectedBackground, RelativeSource={RelativeSource TemplatedParent}}"/>
                                        <Setter TargetName="PART_Panel" Property="BorderBrush" Value="{StaticResource SideBar_Item_Selected_BorderBrush}" />
                                        <Setter TargetName="PART_Panel" Property="BorderThickness" Value="1" />
                                    </Trigger>

                                    <MultiTrigger>

                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="False" />
                                            <Condition Property="IsMouseOver" Value="True" />
                                        </MultiTrigger.Conditions>

                                        <MultiTrigger.Setters>
                                            <Setter TargetName="PART_Panel" Property="Background" Value="{Binding MouseOverBackground, RelativeSource={RelativeSource TemplatedParent}}" />
                                        </MultiTrigger.Setters>

                                    </MultiTrigger>

                                </ControlTemplate.Triggers>

                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                </Style>

            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>
