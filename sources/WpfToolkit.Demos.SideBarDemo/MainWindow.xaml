<Window
    x:Class="DustInTheWind.WpfToolkit.Demos.SideBarDemo.MainWindow"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfToolkit="clr-namespace:DustInTheWind.WpfToolkit;assembly=DustInTheWind.WpfToolkit"
    xmlns:local="clr-namespace:DustInTheWind.WpfToolkit.Demos.SideBarDemo"
    xmlns:pages="clr-namespace:DustInTheWind.WpfToolkit.Demos.SideBarDemo.Pages"
    
    mc:Ignorable="d"
    Title="SideBar Demo"
    Height="450"
    Width="800"
    ResizeMode="CanResizeWithGrip"
    d:DataContext="{d:DesignInstance local:MainViewModel}">

    <wpfToolkit:SideBar>

        <wpfToolkit:SideBarItem>
            <wpfToolkit:SideBarItem.Header>
                <Polyline
                    Points="10,0 0,20 20,20"
                    Fill="#808080"/>
            </wpfToolkit:SideBarItem.Header>

            <pages:TrianglePage DataContext="{Binding TrianglePageModel}"/>
        </wpfToolkit:SideBarItem>

        <wpfToolkit:SideBarItem>
            <wpfToolkit:SideBarItem.Header>
                <Rectangle
                    Width="20"
                    Height="20"
                    Fill="#808080"/>
            </wpfToolkit:SideBarItem.Header>

            <pages:SquarePage DataContext="{Binding SquarePageModel}"/>
        </wpfToolkit:SideBarItem>

        <wpfToolkit:SideBarItem>
            <wpfToolkit:SideBarItem.Header>
                <Ellipse
                    Width="20"
                    Height="20"
                    Fill="#808080"/>
            </wpfToolkit:SideBarItem.Header>

            <pages:CirclePage DataContext="{Binding CirclePageModel}"/>
        </wpfToolkit:SideBarItem>

        <wpfToolkit:SideBar.Buttons>
            <Button
                Content="123"
                Command="{Binding OneTwoThreeCommand}"/>

            <Button
                Content="456"
                Command="{Binding FourFiveSixCommand}"/>
        </wpfToolkit:SideBar.Buttons>

    </wpfToolkit:SideBar>

</Window>
